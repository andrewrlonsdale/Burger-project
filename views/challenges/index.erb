<h1>challenges</h1>
<p><a href="/challenges/new">New challenge</a></p>

<% for challenge in @challenges %>
<p>Name: <%= challenge.name()%></p>
<p> <a href = "restaurants/<%= challenge.restaurant["id"] %>"> <%= challenge.restaurant["name"] %> </a> 
<p>Deal: <%= challenge.deal()%> </p>
<p>Day: <%= challenge.day() %></p>
<p>Food type: <%= challenge.food_type() %></p>
<p><a href="/challenges/<%= challenge.id %>" >Show challenge</a></p>
<hr>
<% end %>

